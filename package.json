{
  "name": "randomladder",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "build": "node build/build.js",
    "build:clean": "rm -rf dist && mkdir -p dist",
    "build:test": "npm run build && node build/test-deployment.js",
    "serve": "http-server dist -p 8080 -c-1",
    "serve:dev": "http-server . -p 8080 -c-1",
    "deploy:test": "node build/test-deployment.js"
  },
  "keywords": ["ladder-game", "korean", "web-game", "static"],
  "author": "",
  "license": "ISC",
  "description": "Korean ladder game (사다리타기) - A fun web-based random selection game",
  "devDependencies": {
    "@playwright/test": "^1.54.1",
    "http-server": "^14.1.1",
    "terser": "^5.36.0",
    "clean-css": "^5.3.3"
  }
}
